{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.5",
  "body": [
    {
      "type": "Container",
      "$data": "${$root}",
      "items": [
        {
          "type": "TextBlock",
          "text": "id: ${if(id, id, 'N/A')}",
          "wrap": true
        },
        {
          "type": "TextBlock",
          "text": "receivedDateTime: ${if(receivedDateTime, receivedDateTime, 'N/A')}",
          "wrap": true
        },
        {
          "type": "TextBlock",
          "text": "subject: ${if(subject, subject, 'N/A')}",
          "wrap": true
        },
        {
          "type": "TextBlock",
          "text": "from.emailAddress.name: ${if(from.emailAddress.name, from.emailAddress.name, 'N/A')}",
          "wrap": true
        },
        {
          "type": "TextBlock",
          "text": "from.emailAddress.address: ${if(from.emailAddress.address, from.emailAddress.address, 'N/A')}",
          "wrap": true
        },
        {
          "type": "TextBlock",
          "text": "bodyPreview: ${if(bodyPreview, bodyPreview, 'N/A')}",
          "wrap": true
        },
        {
          "type": "TextBlock",
          "text": "hasAttachments: ${if(hasAttachments, hasAttachments, 'N/A')}",
          "wrap": true
        },
        {
          "type": "TextBlock",
          "text": "webLink: ${if(webLink, webLink, 'N/A')}",
          "wrap": true
        }
      ]
    }
  ]
}